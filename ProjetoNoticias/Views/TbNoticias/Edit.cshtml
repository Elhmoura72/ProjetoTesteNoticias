@model ProjetoNoticias.Models.TbNoticias

@{
    ViewData["Title"] = "Edit";
}

<h2>Alterar Noticia</h2>

<h4>Atualiza a publicação da Noticia</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="AutorId" />
    @Html.Hidden("pagina",(int)ViewBag.Pagina)
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AutorId" class="control-label"></label>
                <select asp-for="AutorId" class="form-control" asp-items="ViewBag.Autor" disabled></select>
            </div>

            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categoria"></select>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-row">
        <div class="col-md-6">
            <label asp-for="Titulo" class="control-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label asp-for="Descricao" class="control-label"></label>
            @Html.TextAreaFor(T => T.Descricao, new { @class = "form-control", @rows = "10" })
            @*<input asp-for="Descricao" class="form-control" />*@
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>

</form>


<div>
    <a asp-action="Index" asp-route-pagina="@ViewBag.Pagina">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

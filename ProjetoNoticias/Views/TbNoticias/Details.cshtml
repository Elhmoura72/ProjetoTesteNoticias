@model ProjetoNoticias.Models.TbNoticias

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhe da Noticia</h2>

<div>
   
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd>
            @Convert.ToDateTime(Model.Data).ToString("dd-MM-yyyy")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Autor.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd>
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control mt-2", @rows = "10", @readonly = "readonly" })
            @*@Html.DisplayFor(model => model.Descricao)*@
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-pagina ="@ViewBag.Pagina">Editar</a> |
    <a asp-action="Index" asp-route-pagina="@ViewBag.Pagina">Voltar para Lista</a>
</div>
